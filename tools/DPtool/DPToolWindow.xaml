<Window x:Class="krrTools.tools.DPtool.DPToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DP TOOL" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- 浅灰主题按钮样式 -->
        <Style x:Key="LightGrayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2196F3"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 浅灰主题滑块样式 -->
        <Style x:Key="LightGraySliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>

        <!-- 浅灰主题进度条样式 -->
        <Style x:Key="LightGrayProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>

        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- 窗口全局样式 -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- 主要内容区域 -->
        <Border HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                BorderBrush="#BDBDBD" 
                BorderThickness="2" 
                AllowDrop="True"
                Drop="Border_Drop"
                DragEnter="Border_DragEnter">
            <Border.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.5"/>
            </Border.Background>
            <StackPanel Margin="20" VerticalAlignment="Top">
                <!-- 标题区域 -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <TextBlock Text="拖拽.osu文件或包含.osu的文件夹到此处。" 
                               Foreground="#212121"
                               FontSize="21" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Drag and drop .osu files or a folder containing .osu files here." 
                               Foreground="#212121"
                               FontSize="14" 
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 是否修改单侧按键数量 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center">
                    <CheckBox x:Name="ModifyKeysCheckBox" Content="Modify single Hand " VerticalAlignment="Center" 
                              Checked="ModifyKeysCheckBox_Checked" Unchecked="ModifyKeysCheckBox_Unchecked"
                              FontSize="14"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Value, ElementName=KeysSlider, StringFormat='Keys({0}): '}" VerticalAlignment="Center" FontSize="14"/>
                        <Slider x:Name="KeysSlider" 
                                Grid.Column="1"
                                Width="100" 
                                Margin="10,0,0,0" 
                                Minimum="4" 
                                Maximum="10" 
                                Value="5" 
                                TickFrequency="1" 
                                IsSnapToTickEnabled="True"
                                IsEnabled="False"
                                FontSize="14"
                                ValueChanged="KeysSlider_ValueChanged"/>
                    </Grid>
                </StackPanel>

                <!-- 左右面板 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 中间分隔线 -->
                    <Border Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0,0,2,0" BorderBrush="DarkSlateGray" HorizontalAlignment="Center"/>

                    <!-- 左侧面板 -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <!-- L 标签 -->
                        <TextBlock Text="L" FontSize="28" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                        <CheckBox x:Name="LMirrorCheckBox" Content="Mirror" Margin="0,0,0,10" FontSize="14"/>
                        <CheckBox x:Name="LDensityCheckBox" Content="Density" Margin="0,0,0,10" 
                                  Checked="LDensityCheckBox_Checked" Unchecked="LDensityCheckBox_Unchecked"
                                  FontSize="14"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Value, ElementName=LMaxKeysSlider, StringFormat='Max keys({0}): '}" VerticalAlignment="Center" FontSize="14"/>
                            <Slider x:Name="LMaxKeysSlider" Grid.Column="1" Minimum="0" Maximum="5" Value="5" TickFrequency="1" IsSnapToTickEnabled="True" IsEnabled="False" ValueChanged="LMaxKeysSlider_ValueChanged"
                                    Width="100" FontSize="14"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Value, ElementName=LMinKeysSlider, StringFormat='Min keys({0}): '}" VerticalAlignment="Center" FontSize="14"/>
                            <Slider x:Name="LMinKeysSlider" Grid.Column="1" Minimum="0" Maximum="{Binding Value, ElementName=LMaxKeysSlider}" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" IsEnabled="False"
                                    Width="100" FontSize="14"/>
                        </Grid>
                    </StackPanel>

                    <!-- 右侧面板 -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <!-- R 标签 -->
                        <TextBlock Text="R" FontSize="28" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                        <CheckBox x:Name="RMirrorCheckBox" Content="Mirror" Margin="0,0,0,10" FontSize="14"/>
                        <CheckBox x:Name="RDensityCheckBox" Content="Density" Margin="0,0,0,10" 
                                  Checked="RDensityCheckBox_Checked" Unchecked="RDensityCheckBox_Unchecked"
                                  FontSize="14"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Value, ElementName=RMaxKeysSlider, StringFormat='Max keys({0}): '}" VerticalAlignment="Center" FontSize="14"/>
                            <Slider x:Name="RMaxKeysSlider" Grid.Column="1" Minimum="0" Maximum="5" Value="5" TickFrequency="1" IsSnapToTickEnabled="True" IsEnabled="False" ValueChanged="RMaxKeysSlider_ValueChanged"
                                    Width="100" FontSize="14"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Value, ElementName=RMinKeysSlider, StringFormat='Min keys({0}): '}" VerticalAlignment="Center" FontSize="14"/>
                            <Slider x:Name="RMinKeysSlider" Grid.Column="1" Minimum="0" Maximum="{Binding Value, ElementName=RMaxKeysSlider}" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" IsEnabled="False"
                                    Width="100" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <!-- 进度面板 -->
                <StackPanel Margin="0,0,0,20" Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" 
                            x:Name="ProgressPanel">
                    <ProgressBar x:Name="ProcessingProgressBar" 
                                 Height="20" 
                                 Margin="0,0,0,5"
                                 Value="{Binding ProgressValue}"
                                 Maximum="{Binding ProgressMaximum}"
                                 Style="{StaticResource LightGrayProgressBarStyle}"/>
                    <TextBlock x:Name="ProgressTextBlock" 
                               Text="{Binding ProgressText}"
                               Foreground="#212121"
                               FontSize="16" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
