
<Window x:Class="krrTools.InstructionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="使用说明" 
        Width="600" Height="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,15">
            <Run Text="移植自"/>
            <Hyperlink NavigateUri="https://osu.ppy.sh/users/15889644" RequestNavigate="Hyperlink_RequestNavigate">
                <Run Text="HeavenUsurper"/>
            </Hyperlink>
            <Run Text="的LNTransformer工具"/>
            <LineBreak/>
            <Run FontSize="12" Text="Ported from HeavenUsurper's LNTransformer tool"/>
        </TextBlock>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock TextWrapping="Wrap" FontSize="14">
                <Run FontWeight="Bold" Text="第一项：Level 面条密度"/>
                <LineBreak/>
                <Run Text="（鼠标放在滑条上可显示其说明）"/>
                <LineBreak/>
                <Run FontSize="12" Text="First: Level - LN Density (hover over the slider to see descriptions)"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="第二项：转换面条数量占比"/>
                <LineBreak/>
                <Run FontSize="12" Text="Second: Percentage of LNs to convert"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="第三项：转换为1/几的面条"/>
                <LineBreak/>
                <Run FontSize="12" Text="Third: Convert to 1/x LNs"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="第四项：转换多少条轨道的面条"/>
                <LineBreak/>
                <Run Text="（大于所转换谱面Key数则默认全部转换）"/>
                <LineBreak/>
                <Run FontSize="12" Text="Fourth: How many columns to convert LNs (if greater than key count, all columns will be converted)"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="第五项：每隔多少行Note变换所转轨道至其他位置"/>
                <LineBreak/>
                <Run Text="（为零则转换轨道不变，一直转换相同的轨道）"/>
                <LineBreak/>
                <Run Text="（略难以解释，觉得解释不清楚的话请自行设置为0尝试一遍，记得Column值小于Key数）"/>
                <LineBreak/>
                <Run FontSize="12" Text="Fifth: Change converted columns every N notes (0 means fixed columns)"/>
                <LineBreak/>
                <Run FontSize="12" Text="(Hard to explain, if unclear, try setting to 0, remember Column value should be less than Key count)"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="Ignore："/>
                <Run Text="勾选后忽略已转谱面"/>
                <LineBreak/>
                <Run FontSize="12" Text="Ignore: Skip already converted beatmaps"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="OriginalLN："/>
                <Run Text="勾选后保留原谱面条"/>
                <LineBreak/>
                <Run FontSize="12" Text="OriginalLN: Keep original LNs"/>
                <LineBreak/><LineBreak/>
                
                <Run FontWeight="Bold" Text="Fix Error："/>
                <Run Text="使用反算尝试修复一般转面器由于程序计算导致的细小误差"/>
                <LineBreak/>
                <Run Text="（针对谱师有较大用处，此功能大大改善了一般的转面工具成品在打开AiMod时会显示的大量未对准的面尾）"/>
                <LineBreak/>
                <Run FontSize="12" Text="Fix Error: Use reverse calculation to fix small errors caused by program calculations"/>
                <LineBreak/>
                <Run FontSize="12" Text="(Very useful for mappers, greatly improves the large number of misaligned LNs shown in AiMod)"/>
                <LineBreak/><LineBreak/>
                <Run FontWeight="Bold" Text="请注意："/>
                <Run Text="未转换完成前请不要切换页面，否则需要重新转换"/>
                <LineBreak/>
                <Run FontSize="12" Text="Note: Do not switch pages before conversion is complete, otherwise you'll need to reconvert"/>
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>