<Window x:Class="krrTools.UI.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow"
        Title="处理中...">
    <Grid Margin="20">
        <ProgressBar x:Name="progressBar" Height="20" Width="300" Minimum="0" Maximum="100" />
        <TextBlock x:Name="progressText" Margin="0,30,0,0" HorizontalAlignment="Center" />
    </Grid>
</Window>